<UserControl x:Class="Tetris_.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tetris_"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="Transparent" Opacity="1">
        <Button x:Name="Pause"  Content="Button" HorizontalAlignment="Center" Height="100" Margin="0,0" VerticalAlignment="Top" Width="100" FontSize="0.01" BorderBrush="Azure" Opacity="0.5">
            <Button.Template >
                <ControlTemplate >
                    <Border  
                        CornerRadius="15" 
                        BorderThickness="3" 
                        Background="DimGray"  
                        BorderBrush="Black"
                        RenderTransformOrigin="0.5,0.5">
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
